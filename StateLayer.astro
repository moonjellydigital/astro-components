---
import type { HTMLClass, NonSemanticTag } from './types/index.d.ts';
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLClass, HTMLAttributes<NonSemanticTag> {
  Tag: NonSemanticTag;
}

const {
  Tag,
  className = 'state-layer',
  classList = [],
  ...attrs
} = Astro.props;
---

<Tag class:list={[className, classList]} {...attrs} data-ac-type="StateLayer" />
