---
import type { HTMLClass } from './types/index.d.ts';
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLClass, HTMLAttributes<'span'> {
  ariaHidden?: 'true' | 'false';
  children: any;
}

const {
  ariaHidden = 'true',
  className = 'icon',
  classList = [],
  ...attrs
} = Astro.props;
---

<span
  class:list={[className, classList]}
  aria-hidden={ariaHidden}
  {...attrs}
  data-ac-type="Icon"
>
  <slot />
</span>

<style is:global>
  .icon {
    display: block;
    line-height: 0;
  }
</style>
