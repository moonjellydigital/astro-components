---
import type { HTMLAttributes } from 'astro/types';
import type { HTMLClass, HeadingTag } from './types/index.d.ts';

export interface Props extends HTMLClass, HTMLAttributes<HeadingTag> {
  Tag: HeadingTag;
  children: any;
}

const { Tag, className = 'heading', classList = [], ...attrs } = Astro.props;
---

<Tag class:list={[className, classList]} {...attrs} data-ac-type="Heading"
  ><slot /></Tag
>
